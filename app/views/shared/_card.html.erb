<% url = 'https://source.unsplash.com/random/' %>
<% url += (400..500).to_a.sample.to_s + 'x' + (400..500).to_a.sample.to_s %>



<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= url %>');">
  <div class="card-description">
    <h2><%= cocktail.name %></h2>
  </div>
  <%= link_to '',cocktail_path(cocktail), class:'card-link' %>
</div>